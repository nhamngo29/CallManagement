<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CallManagement.App"
             xmlns:local="using:CallManagement"
             RequestedThemeVariant="Light">
    
    <!-- Light mode default for eye comfort -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    
    <!-- Resources MUST be loaded BEFORE Styles that use them -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://CallManagement/Styles/Colors.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
  
    <Application.Styles>
        <FluentTheme />
        
        <!-- Custom Styles -->
        <StyleInclude Source="avares://CallManagement/Styles/Typography.axaml"/>
        <StyleInclude Source="avares://CallManagement/Styles/Controls.axaml"/>
        <StyleInclude Source="avares://CallManagement/Styles/Animations.axaml"/>
    </Application.Styles>
</Application>