<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- COMMON VALUES -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Styles.Resources>
        <CornerRadius x:Key="CornerRadiusSM">4</CornerRadius>
        <CornerRadius x:Key="CornerRadiusMD">8</CornerRadius>
        <CornerRadius x:Key="CornerRadiusLG">12</CornerRadius>
        <CornerRadius x:Key="CornerRadiusXL">16</CornerRadius>
        <CornerRadius x:Key="CornerRadiusPill">9999</CornerRadius>
        
        <x:Double x:Key="RowMinHeight">44</x:Double>
        <x:Double x:Key="ButtonMinHeight">36</x:Double>
        <x:Double x:Key="IconButtonSize">36</x:Double>
        
        <Thickness x:Key="SpacingXS">4</Thickness>
        <Thickness x:Key="SpacingSM">8</Thickness>
        <Thickness x:Key="SpacingMD">12</Thickness>
        <Thickness x:Key="SpacingLG">16</Thickness>
        <Thickness x:Key="SpacingXL">24</Thickness>
        
        <!-- Fonts -->
        <FontFamily x:Key="DefaultFontFamily">Inter, Segoe UI, San Francisco, Helvetica Neue, Arial</FontFamily>
        <x:Double x:Key="FontSizeXS">11</x:Double>
        <x:Double x:Key="FontSizeSM">12</x:Double>
        <x:Double x:Key="FontSizeMD">14</x:Double>
        
        <!-- Colors needed for controls -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#2563EB"/>
        <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1A1A2E"/>
        <SolidColorBrush x:Key="BorderMediumBrush" Color="#D1D5DB"/>
        <SolidColorBrush x:Key="BorderLightBrush" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="NeutralLightBrush" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SuccessLightBrush" Color="#DCFCE7"/>
        <SolidColorBrush x:Key="SuccessTextBrush" Color="#166534"/>
        <SolidColorBrush x:Key="WarningLightBrush" Color="#FEF3C7"/>
        <SolidColorBrush x:Key="WarningTextBrush" Color="#92400E"/>
        <SolidColorBrush x:Key="ErrorLightBrush" Color="#FEE2E2"/>
        <SolidColorBrush x:Key="ErrorTextBrush" Color="#991B1B"/>
        <SolidColorBrush x:Key="NeutralTextBrush" Color="#374151"/>
    </Styles.Resources>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- PRIMARY BUTTON -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="Button.primary">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextOnPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeMD}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusMD}"/>
        <Setter Property="MinHeight" Value="{StaticResource ButtonMinHeight}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="RenderTransform" Value="scaleX(1) scaleY(1)"/>
        <Setter Property="Transitions">
            <Transitions>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15"/>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Button.primary:pointerover">
        <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
        <Setter Property="RenderTransform" Value="scaleX(1.02) scaleY(1.02)"/>
    </Style>
    
    <Style Selector="Button.primary:pressed">
        <Setter Property="RenderTransform" Value="scaleX(0.98) scaleY(0.98)"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- SECONDARY BUTTON -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="Button.secondary">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderMediumBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeMD}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusMD}"/>
        <Setter Property="MinHeight" Value="{StaticResource ButtonMinHeight}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="RenderTransform" Value="scaleX(1) scaleY(1)"/>
        <Setter Property="Transitions">
            <Transitions>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15"/>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Button.secondary:pointerover">
        <Setter Property="Background" Value="{StaticResource NeutralLightBrush}"/>
        <Setter Property="RenderTransform" Value="scaleX(1.02) scaleY(1.02)"/>
    </Style>
    
    <Style Selector="Button.secondary:pressed">
        <Setter Property="RenderTransform" Value="scaleX(0.98) scaleY(0.98)"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- ICON BUTTON (Circle) -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="Button.iconButton">
        <Setter Property="Width" Value="{StaticResource IconButtonSize}"/>
        <Setter Property="Height" Value="{StaticResource IconButtonSize}"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusPill}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="RenderTransform" Value="scaleX(1) scaleY(1)"/>
        <Setter Property="Transitions">
            <Transitions>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.12"/>
                <BrushTransition Property="Background" Duration="0:0:0.12"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Button.iconButton:pointerover">
        <Setter Property="Background" Value="{StaticResource NeutralLightBrush}"/>
        <Setter Property="RenderTransform" Value="scaleX(1.08) scaleY(1.08)"/>
    </Style>
    
    <Style Selector="Button.iconButton:pressed">
        <Setter Property="RenderTransform" Value="scaleX(0.92) scaleY(0.92)"/>
    </Style>
    
    <Style Selector="Button.iconButton:disabled">
        <Setter Property="Opacity" Value="0.4"/>
        <Setter Property="Cursor" Value="Arrow"/>
    </Style>
    
    <!-- Icon Button Variants -->
    <Style Selector="Button.iconButton.success:pointerover">
        <Setter Property="Background" Value="{StaticResource SuccessLightBrush}"/>
    </Style>
    
    <Style Selector="Button.iconButton.warning:pointerover">
        <Setter Property="Background" Value="{StaticResource WarningLightBrush}"/>
    </Style>
    
    <Style Selector="Button.iconButton.error:pointerover">
        <Setter Property="Background" Value="{StaticResource ErrorLightBrush}"/>
    </Style>
    
    <Style Selector="Button.iconButton.neutral:pointerover">
        <Setter Property="Background" Value="{StaticResource NeutralLightBrush}"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- TOPBAR BUTTON (Icon + Text) -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="Button.topBarButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeMD}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusMD}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="RenderTransform" Value="scaleX(1) scaleY(1)"/>
        <Setter Property="Transitions">
            <Transitions>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.12"/>
                <BrushTransition Property="Background" Duration="0:0:0.12"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Button.topBarButton:pointerover">
        <Setter Property="Background" Value="{StaticResource NeutralLightBrush}"/>
        <Setter Property="RenderTransform" Value="scaleX(1.02) scaleY(1.02)"/>
    </Style>
    
    <Style Selector="Button.topBarButton:pressed">
        <Setter Property="RenderTransform" Value="scaleX(0.98) scaleY(0.98)"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- STATUS BADGE -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="Border.statusBadge">
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusPill}"/>
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    
    <Style Selector="Border.statusBadge TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeXS}"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>
    
    <Style Selector="Border.statusBadge.success">
        <Setter Property="Background" Value="{StaticResource SuccessLightBrush}"/>
    </Style>
    <Style Selector="Border.statusBadge.success TextBlock">
        <Setter Property="Foreground" Value="{StaticResource SuccessTextBrush}"/>
    </Style>
    
    <Style Selector="Border.statusBadge.warning">
        <Setter Property="Background" Value="{StaticResource WarningLightBrush}"/>
    </Style>
    <Style Selector="Border.statusBadge.warning TextBlock">
        <Setter Property="Foreground" Value="{StaticResource WarningTextBrush}"/>
    </Style>
    
    <Style Selector="Border.statusBadge.error">
        <Setter Property="Background" Value="{StaticResource ErrorLightBrush}"/>
    </Style>
    <Style Selector="Border.statusBadge.error TextBlock">
        <Setter Property="Foreground" Value="{StaticResource ErrorTextBrush}"/>
    </Style>
    
    <Style Selector="Border.statusBadge.neutral">
        <Setter Property="Background" Value="{StaticResource NeutralLightBrush}"/>
    </Style>
    <Style Selector="Border.statusBadge.neutral TextBlock">
        <Setter Property="Foreground" Value="{StaticResource NeutralTextBrush}"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- CARD -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="Border.card">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusLG}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="16"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- TOOLTIP -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="ToolTip">
        <Setter Property="Background" Value="#1F2937"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSM}"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusSM}"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- INLINE EDITING - TEXT BOX STYLES -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="TextBox.inlineEdit">
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderMediumBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeMD}"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.12"/>
                <BrushTransition Property="Background" Duration="0:0:0.12"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="TextBox.inlineEdit:focus">
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Background" Value="#FFFFFF"/>
    </Style>
    
    <Style Selector="TextBox.inlineEdit:pointerover">
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
    </Style>
    
    <Style Selector="TextBox.inlineEdit.error">
        <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
        <Setter Property="Background" Value="{StaticResource ErrorLightBrush}"/>
    </Style>
    
    <!-- Phone Number TextBox (monospace) -->
    <Style Selector="TextBox.inlineEdit.phone">
        <Setter Property="FontFamily" Value="JetBrains Mono, Consolas, Menlo, Monaco, monospace"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- INLINE EDITING - NOTE TEXTAREA -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="TextBox.noteTextArea">
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderMediumBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeMD}"/>
        <Setter Property="MinHeight" Value="80"/>
        <Setter Property="MaxHeight" Value="160"/>
        <Setter Property="AcceptsReturn" Value="True"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="VerticalContentAlignment" Value="Top"/>
        <Setter Property="Watermark" Value="Ghi chú cuộc gọi... (Ctrl+Enter để lưu, Esc để hủy)"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.12"/>
                <DoubleTransition Property="MinHeight" Duration="0:0:0.15" Easing="CubicEaseInOut"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="TextBox.noteTextArea:focus">
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- INLINE EDITING - NOTE PANEL -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="Border.noteExpandPanel">
        <Setter Property="Background" Value="#FAFBFC"/>
        <Setter Property="CornerRadius" Value="0,0,8,8"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="BoxShadow" Value="0 2 8 0 #10000000"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.15"/>
                <ThicknessTransition Property="Padding" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- INLINE EDITING - ROW STYLES -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="Border.contactRow">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="MinHeight" Value="52"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.12"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.12"/>
                <ThicknessTransition Property="BorderThickness" Duration="0:0:0.12"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Border.contactRow:pointerover">
        <Setter Property="Background" Value="{StaticResource RowHoverBrush}"/>
    </Style>
    
    <!-- Editing Row Style -->
    <Style Selector="Border.contactRow.editing">
        <Setter Property="Background" Value="#F0F7FF"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="3,0,0,1"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- INLINE EDITING - ACTION BUTTONS -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="Button.editActionSave">
        <Setter Property="Background" Value="{StaticResource SuccessLightBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource SuccessTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="MinHeight" Value="28"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.12"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.12"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Button.editActionSave:pointerover">
        <Setter Property="Background" Value="#BBF7D0"/>
    </Style>
    
    <Style Selector="Button.editActionSave:pressed">
        <Setter Property="RenderTransform" Value="scaleX(0.96) scaleY(0.96)"/>
    </Style>
    
    <Style Selector="Button.editActionSave:disabled">
        <Setter Property="Opacity" Value="0.5"/>
        <Setter Property="Cursor" Value="Arrow"/>
    </Style>
    
    <Style Selector="Button.editActionCancel">
        <Setter Property="Background" Value="{StaticResource NeutralLightBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource NeutralTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="MinHeight" Value="28"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.12"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.12"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Button.editActionCancel:pointerover">
        <Setter Property="Background" Value="#E5E7EB"/>
    </Style>
    
    <Style Selector="Button.editActionCancel:pressed">
        <Setter Property="RenderTransform" Value="scaleX(0.96) scaleY(0.96)"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- INLINE EDITING - NOTE BUTTON -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="Button.noteButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="MinHeight" Value="24"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.12"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Button.noteButton:pointerover">
        <Setter Property="Background" Value="{StaticResource NeutralLightBrush}"/>
    </Style>
    
    <Style Selector="Button.noteButton.hasNote">
        <Setter Property="Background" Value="{StaticResource WarningLightBrush}"/>
    </Style>
    
    <Style Selector="Button.noteButton.hasNote:pointerover">
        <Setter Property="Background" Value="#FDE68A"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- INLINE EDITING - ERROR TEXT -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="TextBlock.errorText">
        <Setter Property="Foreground" Value="{StaticResource ErrorTextBrush}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- SESSION TABS -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="TabControl.sessionTabs">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
    <Style Selector="TabControl.sessionTabs TabItem">
        <Setter Property="Background" Value="{StaticResource NeutralLightBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8,8,0,0"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="0,0,4,0"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.12"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="TabControl.sessionTabs TabItem:pointerover">
        <Setter Property="Background" Value="#E5E7EB"/>
    </Style>
    
    <Style Selector="TabControl.sessionTabs TabItem:selected">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="BorderThickness" Value="1,1,1,0"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- PRIMARY BUTTON WITH ERROR STYLE -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="Button.primary.error">
        <Setter Property="Background" Value="{StaticResource ErrorTextBrush}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style Selector="Button.primary.error:pointerover">
        <Setter Property="Background" Value="#B91C1C"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- QUICK NOTE BUTTON -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="Button.quickNoteBtn">
        <Setter Property="Background" Value="{StaticResource NeutralLightBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource NeutralTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="0,0,6,6"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.12"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.12"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Button.quickNoteBtn:pointerover">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
    </Style>
    
    <Style Selector="Button.quickNoteBtn:pressed">
        <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- SESSION LISTBOX -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="ListBox.sessionListBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <Style Selector="ListBox.sessionListBox ListBoxItem">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0,2"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.12"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="ListBox.sessionListBox ListBoxItem:pointerover">
        <Setter Property="Background" Value="{StaticResource NeutralLightBrush}"/>
    </Style>
    
    <Style Selector="ListBox.sessionListBox ListBoxItem:selected">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
    </Style>
    
    <Style Selector="ListBox.sessionListBox ListBoxItem:selected:pointerover">
        <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
    </Style>
    
    <!-- Text color changes for selected state -->
    <Style Selector="ListBox.sessionListBox ListBoxItem:selected TextBlock">
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style Selector="ListBox.sessionListBox ListBoxItem:selected Border">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- SESSION LIST ITEM (BUTTON - LEGACY) -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="Button.sessionListItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="Margin" Value="0,2"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.12"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Button.sessionListItem:pointerover">
        <Setter Property="Background" Value="{StaticResource NeutralLightBrush}"/>
    </Style>
    
    <Style Selector="Button.sessionListItem:pressed">
        <Setter Property="Background" Value="{StaticResource BorderLightBrush}"/>
    </Style>
    
    <Style Selector="Button.sessionListItem.selected">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style Selector="Button.sessionListItem.selected:pointerover">
        <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
    </Style>
    
</Styles>
