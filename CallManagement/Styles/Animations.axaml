<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- ANIMATION STYLES -->
    <!-- All animations are < 250ms for smooth, non-fancy feel -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <!-- Page Load Fade In Animation -->
    <Style Selector="Panel.fadeIn">
        <Setter Property="Opacity" Value="1"/>
    </Style>
    
    <Style Selector="Border.fadeIn">
        <Setter Property="Opacity" Value="1"/>
    </Style>
    
    <!-- Overlay Fade In -->
    <Style Selector="Grid.overlayFadeIn">
        <Setter Property="Opacity" Value="1"/>
    </Style>
    
    <!-- Content Scale In -->
    <Style Selector="Border.scaleIn">
        <Setter Property="Opacity" Value="1"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    <!-- INLINE EDITING ANIMATIONS -->
    <!-- ═══════════════════════════════════════════════════════════════════════ -->
    
    <!-- Note Panel Expand/Collapse Animation -->
    <Style Selector="Border.notePanel">
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="MaxHeight" Duration="0:0:0.15" Easing="CubicEaseInOut"/>
                <DoubleTransition Property="Opacity" Duration="0:0:0.15"/>
                <ThicknessTransition Property="Margin" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>
    
    <!-- Edit Row Highlight Animation -->
    <Style Selector="Border.editRow">
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.12"/>
                <ThicknessTransition Property="BorderThickness" Duration="0:0:0.12"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.12"/>
            </Transitions>
        </Setter>
    </Style>
    
    <!-- TextBox Focus Animation -->
    <Style Selector="TextBox.editField">
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.12"/>
                <BrushTransition Property="Background" Duration="0:0:0.12"/>
            </Transitions>
        </Setter>
    </Style>
    
    <!-- Button Fade Animation -->
    <Style Selector="Button.editAction">
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.12"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.12"/>
            </Transitions>
        </Setter>
    </Style>
    
</Styles>
