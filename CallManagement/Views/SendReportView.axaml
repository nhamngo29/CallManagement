<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CallManagement.ViewModels"
             xmlns:conv="using:CallManagement.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
             x:Class="CallManagement.Views.SendReportView"
             x:DataType="vm:SendReportViewModel">
    
    <Design.DataContext>
        <vm:SendReportViewModel/>
    </Design.DataContext>
    
    <UserControl.Resources>
        <conv:BoolToOpacityConverter x:Key="BoolToOpacity"/>
        <conv:InverseBoolConverter x:Key="InverseBool"/>
    </UserControl.Resources>
    
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!-- MAIN POPUP CONTAINER -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <Border Background="{DynamicResource CardBackgroundBrush}"
            CornerRadius="16"
            BoxShadow="0 8 32 0 #33000000"
            MinWidth="450"
            MaxWidth="550"
            MaxHeight="650"
            Padding="0">
        
        <Grid RowDefinitions="Auto,*,Auto,Auto">
            
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- HEADER -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="0"
                    Background="{DynamicResource PrimaryBrush}"
                    CornerRadius="16,16,0,0"
                    Padding="20,16">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Grid.Column="0" Spacing="4">
                        <TextBlock Text="ðŸ“¤ Send Report"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                        <TextBlock Text="Gá»­i bÃ¡o cÃ¡o Excel qua Telegram"
                                   FontSize="12"
                                   Foreground="#FFFFFFCC"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1"
                            Classes="iconButton"
                            Command="{Binding CloseCommand}"
                            Background="Transparent"
                            Width="32" Height="32"
                            ToolTip.Tip="ÄÃ³ng (ESC)">
                        <TextBlock Text="âœ•" FontSize="16" Foreground="White" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                </Grid>
            </Border>
            
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- CONTENT -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="20">
                <StackPanel Spacing="20"
                            IsEnabled="{Binding !IsSending}">
                    
                    <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
                    <!-- FILTER SECTION -->
                    <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
                    <Border Background="{DynamicResource NeutralLightBrush}"
                            CornerRadius="12"
                            Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Classes="heading4" Text="ðŸ” Filter"/>
                            
                            <!-- Today Filter -->
                            <CheckBox IsChecked="{Binding FilterToday}"
                                      Content="HÃ´m nay"
                                      FontWeight="Medium"/>
                            
                            <!-- Date Range Filter -->
                            <CheckBox IsChecked="{Binding FilterDateRange}"
                                      Content="Chá»n khoáº£ng ngÃ y"/>
                            
                            <!-- Date Pickers -->
                            <Grid ColumnDefinitions="Auto,*,Auto,*"
                                  IsVisible="{Binding FilterDateRange}"
                                  Margin="24,8,0,0">
                                <TextBlock Grid.Column="0" 
                                           Text="Tá»«:" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <DatePicker Grid.Column="1"
                                            SelectedDate="{Binding FilterFromDate}"
                                            MinWidth="130"/>
                                
                                <TextBlock Grid.Column="2" 
                                           Text="Äáº¿n:" 
                                           VerticalAlignment="Center"
                                           Margin="16,0,8,0"/>
                                <DatePicker Grid.Column="3"
                                            SelectedDate="{Binding FilterToDate}"
                                            MinWidth="130"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
                    <!-- SESSIONS SECTION -->
                    <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
                    <Border Background="{DynamicResource CardBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderLightBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="16">
                        <StackPanel Spacing="12">
                            
                            <!-- Header with Select All -->
                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                    <TextBlock Classes="heading4" Text="ðŸ“‚ Sessions"/>
                                    <Border Background="{DynamicResource PrimaryLightBrush}"
                                            CornerRadius="10"
                                            Padding="8,2">
                                        <TextBlock Text="{Binding FilteredSessions.Count}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource PrimaryBrush}"
                                                   FontWeight="SemiBold"/>
                                    </Border>
                                </StackPanel>
                                
                                <CheckBox Grid.Column="1"
                                          IsChecked="{Binding SelectAll}"
                                          Content="Chá»n táº¥t cáº£"
                                          FontSize="12"/>
                            </Grid>
                            
                            <!-- Sessions List -->
                            <Border Height="200"
                                    Background="{DynamicResource NeutralLightBrush}"
                                    CornerRadius="8"
                                    BorderBrush="{DynamicResource BorderLightBrush}"
                                    BorderThickness="1">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding FilteredSessions}"
                                                  Margin="8">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:SelectableSessionViewModel">
                                                <Border Background="White"
                                                        CornerRadius="6"
                                                        Margin="0,2"
                                                        Padding="12,8"
                                                        Cursor="Hand">
                                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                                        <CheckBox Grid.Column="0"
                                                                  IsChecked="{Binding IsSelected}"
                                                                  VerticalAlignment="Center"
                                                                  Margin="0,0,8,0"/>
                                                        
                                                        <TextBlock Grid.Column="1"
                                                                   Text="{Binding DisplayText}"
                                                                   VerticalAlignment="Center"
                                                                   FontWeight="Medium"/>
                                                        
                                                        <Border Grid.Column="2"
                                                                Background="{DynamicResource NeutralLightBrush}"
                                                                CornerRadius="8"
                                                                Padding="6,2">
                                                            <TextBlock FontSize="11"
                                                                       Foreground="{DynamicResource TextMutedBrush}">
                                                                <TextBlock.Text>
                                                                    <MultiBinding StringFormat="{}{0} contacts">
                                                                        <Binding Path="ContactCount"/>
                                                                    </MultiBinding>
                                                                </TextBlock.Text>
                                                            </TextBlock>
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                            
                            <!-- Empty State -->
                            <Border IsVisible="{Binding !FilteredSessions.Count}"
                                    Background="{DynamicResource WarningLightBrush}"
                                    CornerRadius="8"
                                    Padding="12">
                                <TextBlock Text="KhÃ´ng cÃ³ session nÃ o phÃ¹ há»£p vá»›i filter"
                                           Foreground="{DynamicResource WarningTextBrush}"
                                           HorizontalAlignment="Center"
                                           FontSize="13"/>
                            </Border>
                            
                            <!-- Selection Summary -->
                            <TextBlock FontSize="12"
                                       Foreground="{DynamicResource TextMutedBrush}"
                                       HorizontalAlignment="Right">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="ÄÃ£ chá»n: {0} session(s)">
                                        <Binding Path="SelectedCount"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- RESULT MESSAGE (always visible, outside ScrollViewer) -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="2"
                    IsVisible="{Binding ShowResult}"
                    CornerRadius="8"
                    Padding="12"
                    Margin="20,0,20,12"
                    MaxHeight="150">
                <Border.Styles>
                    <Style Selector="Border.success">
                        <Setter Property="Background" Value="{DynamicResource SuccessLightBrush}"/>
                    </Style>
                    <Style Selector="Border.error">
                        <Setter Property="Background" Value="{DynamicResource ErrorLightBrush}"/>
                    </Style>
                </Border.Styles>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Panel>
                        <!-- Success -->
                        <Border IsVisible="{Binding IsResultSuccess}"
                                Background="{DynamicResource SuccessLightBrush}"
                                CornerRadius="8"
                                Padding="12">
                            <StackPanel Spacing="4">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="âœ”ï¸" FontSize="14"/>
                                    <TextBlock Text="{Binding ResultMessage}"
                                               Foreground="{DynamicResource SuccessTextBrush}"
                                               FontWeight="SemiBold"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Error -->
                        <Border IsVisible="{Binding !IsResultSuccess}"
                                Background="{DynamicResource ErrorLightBrush}"
                                CornerRadius="8"
                                Padding="12">
                            <StackPanel Spacing="4">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="âŒ" FontSize="14"/>
                                    <TextBlock Text="{Binding ResultMessage}"
                                               Foreground="{DynamicResource ErrorTextBrush}"
                                               FontWeight="SemiBold"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                                <TextBlock Text="{Binding ErrorDetails}"
                                           Foreground="{DynamicResource ErrorTextBrush}"
                                           FontSize="12"
                                           TextWrapping="Wrap"
                                           IsVisible="{Binding ErrorDetails, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                           Margin="26,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </Panel>
                </ScrollViewer>
            </Border>
            
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- PROGRESS OVERLAY (over content) -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="1"
                    IsVisible="{Binding IsSending}"
                    Background="#F0FFFFFF"
                    CornerRadius="0">
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Spacing="16">
                    <ProgressBar IsIndeterminate="False"
                                 Minimum="0"
                                 Maximum="{Binding ProgressTotal}"
                                 Value="{Binding ProgressCurrent}"
                                 Width="200"
                                 Height="8"/>
                    <TextBlock Text="{Binding SendingProgress}"
                               HorizontalAlignment="Center"
                               FontWeight="Medium"/>
                    <Button Classes="secondary"
                            Content="Há»§y"
                            Command="{Binding CancelCommand}"
                            HorizontalAlignment="Center"
                            MinWidth="80"/>
                </StackPanel>
            </Border>
            
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- FOOTER BUTTONS -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="3"
                    BorderBrush="{DynamicResource BorderLightBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="20,16">
                <Grid ColumnDefinitions="*,Auto,Auto">
                    <!-- File info -->
                    <TextBlock Grid.Column="0"
                               FontSize="12"
                               Foreground="{DynamicResource TextMutedBrush}"
                               VerticalAlignment="Center">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="Sáº½ gá»­i {0} file Excel">
                                <Binding Path="SelectedCount"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    
                    <!-- Cancel Button -->
                    <Button Grid.Column="1"
                            Classes="secondary"
                            Content="Cancel"
                            Command="{Binding CancelCommand}"
                            IsEnabled="{Binding !IsSending}"
                            MinWidth="90"
                            Margin="0,0,12,0"/>
                    
                    <!-- Send Button -->
                    <Button Grid.Column="2"
                            Classes="primary"
                            Command="{Binding SendCommand}"
                            IsEnabled="{Binding HasSelectedSessions}"
                            MinWidth="110">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="ðŸ“¤" FontSize="14"/>
                            <TextBlock Text="Send"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
